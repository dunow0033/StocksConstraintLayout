<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/targetPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Price"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="start"
        android:padding="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/percentageChange" />

    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/percentageChange"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/percentageChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percentage Change"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="start"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/targetPrice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/percentageChange"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/movingAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moving Average"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="start"
        android:padding="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/percentageChange" />

    <View
        android:id="@+id/divider_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movingAverage"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/newsEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="News and Events"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="start"
        android:padding="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movingAverage" />

    <View
        android:id="@+id/divider_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newsEvents"
        android:background="@color/gray" />

</androidx.constraintlayout.widget.ConstraintLayout>